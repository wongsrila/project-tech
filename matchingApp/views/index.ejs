<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs')  %> 
<body>

    <!-- navigation -->
    <%- include('./partials/nav.ejs')  %> 

    <!-- Content -->
    <div class="blogs content">
        <h2>All Blogs</h2>
        <% if (blogs.length > 0) {%> 
            <% blogs.forEach(blog => {%> 
                <h3 class="title"><%= blog.title %> </h3>
                <p class="snippet"><%= blog.snippet %> </p>
            <% }); %> 
        <% } else {%> 
            <p>There are no blogs to display :(</p>
        <% }; %> 
    </div>

    <!-- Footer -->
    <%- include('./partials/footer.ejs')  %> 
</body>
</html>